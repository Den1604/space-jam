                Call AddKeyItem ( .Item:ForestPass )
          EndSwitch
          Call InterpNpcYaw ( .Npc:Self -207` 15` )
          Wait 6`
    EndIf

    Call EnablePartnerAI ()
    Call DisablePlayerInput ( .False )
    Return
    End
}

